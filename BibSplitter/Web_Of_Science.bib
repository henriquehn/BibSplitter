@inproceedings{ WOS:000424872103094,
Author = {Shimly, Samiya and Smith, David B. and Movassaghi, Samaneh},
Book-Group-Author = {IEEE},
Title = {Cross-layer optimized routing with low duty cycle TDMA across multiple
   wireless body area networks},
Booktitle = {2017 IEEE INTERNATIONAL CONFERENCE ON COMMUNICATIONS (ICC)},
Series = {IEEE International Conference on Communications},
Year = {2017},
Note = {IEEE International Conference on Communications (ICC), Paris, FRANCE,
   MAY 21-25, 2017},
Organization = {IEEE; IEEE France Sect; IEEE Commun Soc},
Abstract = {In this paper, we study the performance of two cross-layer optimized
   dynamic routing techniques for radio interference mitigation across
   multiple coexisting wireless body area networks (BANs), based on
   real-life measurements. At the network layer, the best route is selected
   according to channel state information from the physical layer,
   associated with low duty cycle TDMA at the MAC layer. The routing
   techniques (i.e., shortest path routing (SPR), and novel cooperative
